        Rectangle:
            source:"1.jpg"
            size: root.width, root.height
            #ปรับตาม กว้างสูงของ Root
            pos: self.pos
    #BoxLayout:
        #orientation: 'vertical'
        #Image:
            #source: "1.jpg"
    Button:
        text:"แปลงฐานข้อมูล"
        font_name:"tahoma" 
        color: 'yellow'
        on_press:app.root.current='Scr_2'
        pos_hint:{'center_x' : 0.6,'center_y':0.1} #ปรับขยับชิดซ้ายขวา กลาง เรื่อยๆ 
